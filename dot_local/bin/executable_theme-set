#!/usr/bin/env bash

if [[ -z $1 && $1 != "CNCLD" ]]; then
  echo "Usage: theme-set <theme-name>"
  exit 1
fi

THEMES_DIR="$HOME/.config/cachydae/themes/"
CURRENT_THEME_DIR="$HOME/.config/cachydae/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR"
  exit 1
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

# Change background with theme
theme-bg-next

# Restart components to apply new theme
if pgrep -x waybar >/dev/null; then
  restart-waybar
fi
restart-swayosd
hyprctl reload
pkill -SIGUSR2 btop
makoctl reload

# Change gnome, browser, vscode themes
case "$TERMINAL" in
"alacritty") touch ~/.config/alacritty/alacritty.toml ;;
"kitty") killall -SIGUSR1 kitty ;;
"ghostty") killall -SIGUSR2 ghostty ;;
esac
theme-set-gnome
theme-set-eza
